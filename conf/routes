
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /categories                 controllers.CategoryController.getCategories
GET     /category/:id               controllers.CategoryController.getCategoryById(id: Long)

GET     /products                   controllers.ProductController.getProducts
GET     /product/:id                controllers.ProductController.getProductById(id: Long)
POST    /addproduct                 controllers.ProductController.addProduct
PUT     /editproduct/:id            controllers.ProductController.editProduct(id: Long)
DELETE  /deleteproduct/:id          controllers.ProductController.deleteProduct(id: Long)

GET     /users                      controllers.UserController.getUsers
GET     /user/:id                   controllers.UserController.getUserById(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      